{
  "name": "mylibrary-boilerplate",
  "version": "0.0.0-development",
  "description": "This is a general JavaScript library boilerplate.",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/estevanmaito/library-boilerplate.git"
  },
  "keywords": [],
  "author": "Estevan Maito <ejmaito@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estevanmaito/library-boilerplate/issues"
  },
  "homepage": "https://github.com/estevanmaito/library-boilerplate#readme",
  "devDependencies": {
    "codecov": "3.6.5",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "jest": "26.0.1",
    "semantic-release": "^17.0.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:coverage"
    }
  }
}
